new : Maybe BigInt -> Constructor -> Task Error NewContract
new value { someNum_ } =
    let
        value_ =
            Maybe.map BigInt.toString value
                |> Maybe.withDefault "0"

        ctorArg1 =
            BigInt.toString someNum_

        deployFunc =
            "eth.contract("
                ++ abi
                ++ ").new"
                ++ "("
                ++ ctorArg1
                ++ ", {from: "
                ++ "web3.eth.accounts[0]"
                ++ ", value: '"
                ++ value_
                ++ "', gas: "
                ++ "'200000'"
                ++ ", gasPrice: '5000000000'"
                ++ ", data: '"
                ++ data
                ++ "'}, metaMaskCallBack )"
    in
        Contract.deployContract deployFunc
