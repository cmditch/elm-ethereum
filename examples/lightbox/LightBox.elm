    { professor = Nothing, numberz = Nothing, aPrime = Nothing }


encodeSubtractFilter : SubtractFilter -> Value
encodeSubtractFilter { professor, numberz, aPrime } =
    listOfMaybesToVal
        [ ( "professor", Maybe.map encodeAddressList professor )
